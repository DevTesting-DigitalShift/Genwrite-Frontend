{
  "compilerOptions": {
    "target": "ES2022", // Or ES2023 if your environment supports it
    "lib": ["ES2023", "DOM"], // Include ES2023 for toSorted
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
