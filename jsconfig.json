{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
