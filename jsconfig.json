{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"]
}
